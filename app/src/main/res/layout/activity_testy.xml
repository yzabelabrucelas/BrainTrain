<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.franchette.braintrain.Testy">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imgbtn_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/customborder"/>

    <ImageButton
        android:id="@+id/imgbtn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_submit"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/circle"
        android:onClick="main"
        app:srcCompat="@drawable/exit" />

    <RadioGroup
        android:id="@+id/choices"
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

     <RadioButton
            android:id="@+id/a_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
         android:layout_gravity="center"
            android:fontFamily="@font/comic"
            android:textSize="20dp"
         android:textColor="#FFFFFF"
            android:text="choice A" />


        <RadioButton
            android:id="@+id/b_rb"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/comic"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="choice B" />

        <RadioButton
            android:id="@+id/c_rb"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/comic"
            android:text="choice C"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/d_rb"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/comic"
            android:text="choice D"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choices"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/rustler"
        android:onClick="next"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textSize="20dp" />




</RelativeLayout>
