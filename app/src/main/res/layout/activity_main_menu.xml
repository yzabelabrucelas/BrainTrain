<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.franchette.braintrain.MainMenu">


    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/imgbtn_credits"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/circle"
        android:onClick="credits"
        app:srcCompat="@drawable/info" />


    <TextView
        android:id="@+id/main"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/twist"
        android:fontFamily="@font/prometheus"
        android:text="Main Menu"
        android:textColor="#FF87CEEB"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main"
        android:layout_marginTop="11dp"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:background="@drawable/border" />

    <Button
        android:id="@+id/twist"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/rustler"
        android:onClick="TextTwist"
        android:text="Play"
        android:textSize="19dp" />


    <ImageView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/twist" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/twist"
        android:layout_alignTop="@+id/img"
        android:layout_marginTop="34dp"
        android:elevation="50dp"
        android:fontFamily="@font/rustler"
        android:onClick="choice"
        android:text="Play"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="15dp"
        android:background="@drawable/poll" />


</RelativeLayout>
